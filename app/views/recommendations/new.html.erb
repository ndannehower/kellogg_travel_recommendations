<!-- Validation failure messages -->
<% if @recommendation.errors.any? %>
  <% @recommendation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Recommendation</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_recommendation" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recommendation -->
      <div class="form-group">
        <label for="recommendation" class="control-label">
          Recommendation
        </label>

        <input type="text" id="recommendation" name="recommendation" placeholder="Recommendation" class="form-control" value="<%= @recommendation.recommendation %>">
      </div>

      <!-- Label and input for category_id -->
      <div class="form-group">
        <label for="category_id" class="control-label">
          Category
        </label>

        <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :category, @recommendation.category_id), :class => "form-control") %>
      </div>

      <!-- Label and input for country_id -->
      <div class="form-group">
        <label for="country_id" class="control-label">
          Country
        </label>

        <%= select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :country, @recommendation.country_id), :class => "form-control") %>
      </div>

      <!-- Label and input for city_id -->
      <div class="form-group">
        <label for="city_id" class="control-label">
          City
        </label>

        <%= select_tag(:city_id, options_from_collection_for_select(City.all, :id, :city, @recommendation.city_id), :class => "form-control") %>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @recommendation.address %>">
      </div>

      <!-- Label and input for month_id -->
      <div class="form-group">
        <label for="month_id" class="control-label">
          Month
        </label>

        <%= select_tag(:month_id, options_from_collection_for_select(Month.all, :id, :month, @recommendation.month_id), :class => "form-control") %>
      </div>

      <!-- Label and input for year_id -->
      <div class="form-group">
        <label for="year_id" class="control-label">
          Year
        </label>

        <%= select_tag(:year_id, options_from_collection_for_select(Year.all, :id, :year, @recommendation.year_id), :class => "form-control") %>
      </div>

      <!-- Label and input for trip_id -->
      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>

        <%= select_tag(:trip_id, options_from_collection_for_select(Trip.all, :id, :trip, @recommendation.trip_id), :class => "form-control") %>
      </div>

      <!-- Label and input for visited_with -->
      <div class="form-group">
        <label for="visited_with" class="control-label">
          Visited with
        </label>

        <input type="text" id="visited_with" name="visited_with" placeholder="Visited with" class="form-control" value="<%= @recommendation.visited_with %>">
      </div>

      <!-- Label and input for rating_id -->
      <div class="form-group">
        <label for="rating_id" class="control-label">
          Rating
        </label>

        <%= select_tag(:rating_id, options_from_collection_for_select(Rating.all, :id, :rating, @recommendation.rating_id), :class => "form-control") %>
      </div>

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <input type="text" id="notes" name="notes" placeholder="Notes" class="form-control" value="<%= @recommendation.notes %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="file" id="photo" name="photo" class="form-control">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Recommendation
      </button>
      or
      <a href="/recommendations">Cancel</a>
    </form>
  </div>
</div>
