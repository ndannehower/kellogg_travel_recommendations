<div class="page-header">
  <h1>
    Years
    <a href="/years/new" class="btn btn-lg btn-success">New Year</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "years_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :year_cont, "Year contains" %>
    <%= f.text_field :year_cont, :class => "form-control", :placeholder => "Year contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :recommendations_recommendation_cont, "Recommendation recommendation contains" %>
      <%= f.text_field :recommendations_recommendation_cont, :class => "form-control", :placeholder => "Recommendation recommendation contains" %>
    </div>

<div class="form-group">
      <%= f.label :trips_trip_cont, "Trip trip contains" %>
      <%= f.text_field :trips_trip_cont, :class => "form-control", :placeholder => "Trip trip contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/years" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#years_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Year</th>
        <th>Actions</th>
      </tr>

      <% @years.each do |year| %>
      <tr>
        <td><%= year.year %></td>
        <td>
          <a href="/years/<%= year.id %>" class="btn btn-primary">Show</a>
          <a href="/years/<%= year.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_year/<%= year.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @years, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
